{{#if containerless}}
  {{#liquid-versions value=showFirstBlock name=helperName
                       use=use renderWhenFalse=(hasBlock "inverse") class=class as |valueVersion|}}
    {{#if valueVersion}}
      {{yield}}
    {{else}}
      {{yield to="inverse"}}
    {{/if}}
  {{/liquid-versions}}
{{else}}
  {{#liquid-container
      id=id
      class=class
      growDuration=growDuration
      growPixelsPerSecond=growPixelsPerSecond
      growEasing=growEasing
      enableGrowth=enableGrowth
      as |container|}}
    {{#liquid-versions value=showFirstBlock notify=container name=helperName
    use=use renderWhenFalse=(hasBlock "inverse") as |valueVersion|}}
      {{#if valueVersion}}
        {{yield}}
      {{else}}
        {{yield to="inverse"}}
      {{/if}}
    {{/liquid-versions}}
  {{/liquid-container}}
{{/if}}
